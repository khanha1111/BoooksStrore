<div id="comment-<%= comment.id %>">
  <div class="code-in">
    <%= gravatar_for comment.user,40 %>
    <p class="smith"><a href="#"><i class="glyphicon glyphicon-user">
      </i> <%= comment.user.fullname %></a>
      <span class="date">
        <%= time_ago_in_words(comment.created_at) %><%= t "ago" %>
      </span>
    </p>
    <div class="clearfix"> </div>
  </div>
  <div class="media-body">
    <p><%= comment.content %></p>
  </div>
  <div >
    <% if current_user == comment.user %>
      <%= link_to "", edit_comment_path(comment),
        class: "glyphicon glyphicon-edit", id: "comment-#{comment.id}", remote: true %>
      <%= link_to "", comment_path(comment), method: :delete,
        data: {confirm: t("confirm_delete")}, class: "glyphicon glyphicon-trash text-danger",
         remote: true %>
    <% end %>
  </div>
  <hr />
</div>
