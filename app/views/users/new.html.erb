<div class="inner_page">
<div class="signup">
<h1>Sign Up</h1>
		<%= form_for(User.new) do |f| %>
		<%= render 'shared/error_messages', object: f.object %>
		<div class="form-group">
			<%= f.text_field :email, placeholder: "Email", :class => "input-text" %>
		</div>
		<div class="form-group">
			<%= f.text_field :fullname, placeholder: "Full Name", :class => "input-text" %>
		</div>
		<div class="form-group">
			<%= f.password_field :password, placeholder: "Password", :class => "input-text" %>
		</div>
		<div class="form-group">
			<%= f.password_field :password_confirmation, placeholder: "Password Confirmation", :class => "input-text" %>
		</div>  
		<div class="form-group">
			<button type="submit" class="btn btn-submit">Register</button>
		</div>  
		<% end %>

	</div>
</div>
