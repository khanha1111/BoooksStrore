<div class="inner_page">
<div class="signup">
<h1>New Review</h1><br>
		<%= form_for(@review) do |f| %>
		<%= render 'shared/error_messages', object: f.object %>
		<div class="form-group">
			<%= f.text_field :title, placeholder: "Title", :class => "input-text" %>
			<%= f.hidden_field :book_id, value: @book_id, :class => "input-text" %>
			<%= f.hidden_field :user_id,:value=>current_user.id %>
		</div>
		<div class="form-group">
			<%= f.text_area :content, placeholder: "Content", :class => "area-text" %>
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-submit">Update Review</button>
		</div>
		<% end %>

	</div>
</div>
