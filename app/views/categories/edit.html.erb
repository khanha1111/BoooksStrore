<div class="inner_page">
  <div class="signup">
    <h1><%= t".edit_category" %></h1>
    <%= form_for @category do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="form-group">
      <%= f.text_field :name, placeholder: t("cate_name"), class: "input-text" %>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-submit"><%= t (".update") %></button>
    </div>
    <% end %>
  </div>
</div>
