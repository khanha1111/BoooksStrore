<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<div id="messages_product_view"></div>
<div class="product-view">
  <div class="product-essential">
    <div class="product-img-box">
      <%= image_tag @book.image.url, :width => 270 %>
    </div>
    <div class="product-shop">
      <div class="product-name">
        <h1><%= t ".title" %><%= @book.title %></h1>
      </div>
      <p class="availability in-stock"><%= t ".author" %> <span><%= @book.author %></span></p>
      <p class="availability-only">
        <span title="Only 10000 left"><%= t ".num_of_pages" %><strong><%= @book.num_of_page %></strong></span>
      </p>
      <p class="availability-only">
        <span><%= ".pusblish" %><strong><%= @book.publish_date %></strong></span>
      </p>
      <div class="clear"></div>
      <p><input id="input-21e" value=<%= @book.rating ||= Settings.zero %> type="number" class="rating" min=0 max=5 step=0.5 data-size="xs" ></>
      <div class="short-description">
        <h2><%= t ".quick" %></h2>
        <div class="std">
          <p><strong><%= t ".out" %></strong><%= t ".and" %> <strong><%= t ".we" %></strong> <%= t ".of" %><em><%= t ".of" %></em><%= t ".and" %><br> <%= t ".we_all" %></p>
        </div>
      </div>
      <div class="clear"></div>
      <div class="add-to-box">
        <div class="add-to-cart">
          <button type="button" class="button btn-cart"><span><span><%= t ".add_to" %> </span></span></button>
          <button type="button" class="button btn-cart"><span><span><%= t ".add_to" %></span></span></button>
        </div>
      </div>
    </div>
    <div class="clearer"></div>
  </div>
  <% @reviews=@book.review %>
  <%= render "reviews/list_review" %>
</div>
